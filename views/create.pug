extends layout.pug 

block content
    h1 Create Contact
    form(action="/create" method="POST") 
        fieldset 
            legend Basic Info
            section
                label(for="first") First Name:
                input(name="first" type="text" required)
            section
                label(for="last") Last Name:
                input(name="last" type="text" required)
            section
                label(for="phone") Phone:
                input(name="phone" type="text" required)
            section
                label(for="email") Email:
                input(name="email" type="text" required)
        fieldset 
            legend Address 
            section 
                label(for="street") Street: 
                input(name="street" type="text" required)
            section 
                label(for="city") City: 
                input(name="city" type="text" required)
            section 
                label(for="state") State: 
                input(name="state" type="text" required)
            section 
                label(for="zip") Zip: 
                input(name="zip" type="text" required)
            section 
                label(for="country") Country: 
                input(name="country" type="text" required)
        fieldset 
            legend Contact Preferences
            section 
                input(type="checkbox", name="contact_by_phone")
                label(for="contact_by_phone") Contact by Phone
            section 
                input(type="checkbox", name="contact_by_email")
                label(for="contact_by_email") Contact by Email
            section 
                input(type="checkbox", name="contact_by_mail")
                label(for="contact_by_mail") Contact by Mail
        button(type="submit" class="button") Add
        a(href="/" class="button") Cancel